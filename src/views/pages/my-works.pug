extends ../main.layout.pug

block variables
	- var title = 'Обо мне'

block scripts
	script(src='about.bundle.js')

block content
	section.hero
		.hero-row
			.hero__links
				-
					var socials = [
					['vk', '#'],
					['gh', '#'],
					['in', '#']
					]
				ul.socials
					each item in socials
						li.socials__item
							a(href=`${item[1]}`).socials__link
								+icon(item[0], 'socials__hero-link-icon')

			a(href="").hamburger.hero__menu
				+icon('hamburger','hamburger-pic')

		.hero-row
			.hero__title
				.section-title

				.user.hero__user
					.user__pic
						img.user__pic-img
					.user__description
						.user__name Владимир Астахов
						.user__info Личный сайт разработчика
		.hero-row
			a(href="").down-btn.hero__down-btns
				+icon('arrow_down','hero__down-btn-pic')

	section.my-works
		.works__triangle
			svg(viewBox="0 80 100 10" preserveAspectRatio="none").triangle.triangle_fill
				polygon(points="0,80 0,100 100,100")
				polygon(points="0,100 100,100 100,80")

		h2.block-title Мои работы
		.slider-wrapper
			.slider

		h2.block-title Что обо мне говорят
		.reviews-wrapper
			.reviews__show
			.reviews__form
			a(href="").down-btn.hero__down-btns
				+icon('arrow_down','hero__down-btn-pic')

	footer.footer
		.footer__row
			.footer__col
				nav.menu
					ul.menu__list
						each item in ['Мои работы', 'Обо мне', 'Блог', 'Авторизация']
							li.menu__item
								a(href="").menu__link #{item}

			.footer__col.footer__col_justify_end
				+socials(socials, 'socials__round')

		.footer__row
			.footer__col
				p Я веб-разработчик из Новосибирска, и этот сайт я сделал в рамках обучения в Школе онлайн образования LoftSchool.
			.footer__col.footer__col_justify_end
				p &copy Владимир Астахов | создано с любовью в LoftSchool | 2016